server:
  port: 8000
  
eureka:
  client:
    register-with-eureka: false
    fetch-registry: false
    service-url:
      defaultZone: http://localhost:8761/eureka
      
spring:
  application:
    name: apigateway-server
  cloud:
    gateway: 
      routes:
      - id: mini-server
        uri: http://localhost:8001/
        predicates:
        - Path=/mini/**
      - id: second-server
        uri: http://localhost:8002/
        predicates:
        - Path=/second/**
            